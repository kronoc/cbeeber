<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" 
    xmlns:tools="http://schemas.android.com/tools" 
    android:layout_width="match_parent" 
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context="${packageName}.${activityClass}" >
    

	<ScrollView
        android:id="@+id/activity_programme_scrollview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
         >

	    <LinearLayout
            android:layout_width="match_parent"
        	android:layout_height="wrap_content"
        	android:orientation="vertical" >
            <TextView
                    android:id="@+id/activity_programme_textview_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="10dp"
                    android:text=""
                    android:textColor="#000000"
                    android:textSize="32sp"
                    android:textStyle="bold" />


    		<ImageView
        		android:id="@+id/activity_programme_image"
                android:scaleType="fitStart"
        		android:layout_width="match_parent"
        		android:layout_height="wrap_content"
        		android:layout_marginLeft="10dp"
        		android:layout_marginTop="10dp"
        		android:layout_marginRight="10dp"/>

            <TextView
                    android:id="@+id/activity_programme_textview_subtitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="10dp"
                    android:text=""
                    android:textColor="#000000"
                    android:textSize="30sp"
                    android:textStyle="bold" />

    		<TextView
        		android:id="@+id/activity_programme_textview_description"
        		android:layout_width="match_parent"
        		android:layout_height="wrap_content"
        		android:layout_marginLeft="10dp"
        		android:layout_marginTop="10dp"
        		android:layout_marginRight="10dp"
        		android:text=""
        		android:textColor="#000000"
        		android:textSize="26sp" />



	    </LinearLayout>

	</ScrollView>

</RelativeLayout>
